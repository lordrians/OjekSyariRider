<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rider_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/main_container"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/main_container"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_phone_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="@dimen/main_container"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_phone_black"
            android:text="@string/sign_in_with_phone"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_google_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="@dimen/main_container"
            android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>